# 选择架构和子目标
CONFIG_TARGET_ath79=y
CONFIG_TARGET_ath79_generic=y
CONFIG_TARGET_ath79_generic_DEVICE_csac_qca9563-csac=y

# 选择镜像类型，建议使用 squashfs
CONFIG_TARGET_ROOTFS_SQUASHFS=y
# CONFIG_TARGET_IMAGES_GZIP is not set

# 基础系统
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_fstools=y

# Luci界面 (选择你喜欢的主题，这里以material为例)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-material=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-proto-ppp=y

# 网络
CONFIG_PACKAGE_iptables-mod-extra=y
CONFIG_PACKAGE_dnsmasq-full=y

# 无线驱动 (根据您的QCA9886芯片选择，这里以CT驱动为例)
CONFIG_PACKAGE_kmod-ath10k-ct=y
CONFIG_PACKAGE_kmod-ath10k-ct-smallbuffers=y
CONFIG_PACKAGE_ath10k-firmware-qca9886-ct=y

# 有线驱动
CONFIG_PACKAGE_kmod-switch-qca8337=y

# 工具
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iperf3=y
CONFIG_PACKAGE_tcpdump=y

# APK包管理器支持 (OpenWrt 25.12)
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_opkg=y
# 注意：25.12中，opkg可能被apk取代，但opkg包通常仍会安装兼容性脚本
# 确保busybox包含apk命令
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_APK=y
